<!DOCTYPE html>
<html>
<head>
    <title>Bikaner Veggie Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f8f9fa; }
        .order-card { max-width: 500px; margin: 50px auto; padding: 20px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="card order-card shadow">
            <h2 class="text-center text-success">Fresh Vegetables Bikaner</h2>
            <hr>
            <div id="login-section">
                <input type="text" id="mobile" placeholder="Mobile Number" class="form-control mb-2">
                <input type="text" id="whatsapp" placeholder="WhatsApp Number" class="form-control mb-2">
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="sync">
                    <label class="form-check-label">WhatsApp aur Mobile same hain</label>
                </div>
                <button onclick="checkLocation()" class="btn btn-primary w-100">Check Delivery Radius (5KM)</button>
            </div>
            <p id="status-msg" class="mt-3 text-center fw-bold"></p>
        </div>
    </div>

    <script>
        document.getElementById('sync').onclick = function() {
            if(this.checked) document.getElementById('whatsapp').value = document.getElementById('mobile').value;
        };

        function checkLocation() {
            const msg = document.getElementById('status-msg');
            msg.innerText = "Location check ho rahi hai...";
            
            navigator.geolocation.getCurrentPosition(async (pos) => {
                const res = await fetch('/api/user/check-radius', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({
                        lat: pos.coords.latitude,
                        lng: pos.coords.longitude
                    })
                });
                const data = await res.json();
                if(data.inRadius) {
                    msg.className = "text-success mt-3 text-center fw-bold";
                    msg.innerText = "Aap delivery area mein hain! Aap order kar sakte hain.";
                } else {
                    msg.className = "text-danger mt-3 text-center fw-bold";
                    msg.innerText = "Maafi chahte hain, hum sirf 5km ke area mein delivery karte hain.";
                }
                if(data.inRadius) {
    // Products fetch karne ka logic
    const prodRes = await fetch('/api/products');
    const products = await prodRes.json();
    let html = '<div class="row mt-4">';
    products.forEach(p => {
        html += `
            <div class="col-6 mb-3">
                <div class="card p-2">
                    <h6>${p.name}</h6>
                    <p>Price: â‚¹${p.price}/kg</p>
                    <button class="btn btn-sm btn-success" onclick="addToCart('${p._id}')">Add +</button>
                </div>
            </div>`;
    });
    html += '</div><button class="btn btn-warning w-100 mt-3">Go to Checkout</button>';
    document.getElementById('product-list').innerHTML = html;
}
            }, () => {
                msg.innerText = "Kripya GPS location allow karein.";
            });
        }
    </script>
</body>
</html>
