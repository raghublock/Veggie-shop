<!DOCTYPE html>
<html>
<head>
    <title>Bikaner Veggie Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f8f9fa; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        .order-card { max-width: 500px; margin: 30px auto; padding: 25px; border-radius: 20px; border: none; }
        .product-item { background: white; border-radius: 12px; padding: 10px; margin-bottom: 10px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); }
        .btn-add { background-color: #198754; color: white; border-radius: 8px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="card order-card shadow">
            <h2 class="text-center text-success fw-bold">Bikaner Fresh Veggies</h2>
            <hr>
            <div id="login-section">
                <input type="number" id="mobile" placeholder="Mobile Number" class="form-control mb-2 py-2">
                <input type="number" id="whatsapp" placeholder="WhatsApp Number" class="form-control mb-3 py-2">
                <button onclick="checkLocation()" class="btn btn-primary w-100 fw-bold py-2">Check Delivery Area</button>
            </div>
            
            <p id="status-msg" class="mt-3 text-center fw-bold"></p>
            
            <div id="product-list" class="mt-4"></div>
            
            <div id="checkout-section" style="display:none;" class="mt-4 border-top pt-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Cart Items: <span id="cart-count" class="badge bg-success">0</span></h5>
                    <h5 class="mb-0 text-success">Total: ₹<span id="cart-total">0</span></h5>
                </div>
                <p class="text-muted small mt-2">*Advance Security (60%): ₹<span id="advance-amt">0</span></p>
                <button onclick="sendOrder()" class="btn btn-warning w-100 fw-bold mt-2 py-2">Order on WhatsApp</button>
            </div>
        </div>
    </div>

    <script>
        let cart = [];
        let productsData = [];

        async function checkLocation() {
            const msg = document.getElementById('status-msg');
            msg.innerText = "Location check ho rahi hai...";
            
            navigator.geolocation.getCurrentPosition(async (pos) => {
                const res = await fetch('/api/user/check-radius', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ lat: pos.coords.latitude, lng: pos.coords.longitude })
                });
                
                const data = await res.json();
                if(data.inRadius) {
                    msg.className = "text-success mt-2 text-center";
                    msg.innerText = "Sahi hai! Aap delivery area mein hain.";
                    loadProducts();
                } else {
                    msg.className = "text-danger mt-2 text-center";
                    msg.innerText = "Maafi, hum sirf 5km mein delivery karte hain.";
                }
            });
        }

        async function loadProducts() {
            const res = await fetch('/api/products');
            productsData = await res.json();
            const list = document.getElementById('product-list');
            let html = '';
            
            productsData.forEach(p => {
                html += `
                    <div class="d-flex justify-content-between align-items-center product-item">
                        <div>
                            <span class="fw-bold">${p.name}</span><br>
                            <small class="text-muted">₹${p.price}/${p.unit || 'kg'}</small>
                        </div>
                        <button onclick="addToCart('${p._id}')" class="btn btn-sm btn-add">Add +</button>
                    </div>`;
            });
            list.innerHTML = html;
            document.getElementById('checkout-section').style.display = 'block';
        }

        function addToCart(id) {
            const product = productsData.find(p => p._id === id);
            cart.push(product);
            const total = cart.reduce((sum, item) => sum + item.price, 0);
            document.getElementById('cart-count').innerText = cart.length;
            document.getElementById('cart-total').innerText = total;
            document.getElementById('advance-amt').innerText = (total * 0.6).toFixed(2);
        }

        function sendOrder() {
            const mobile = document.getElementById('mobile').value;
            const total = cart.reduce((sum, item) => sum + item.price, 0);
            const items = cart.map(i => i.name).join(', ');
            const text = `Naya Order! \nSabziyan: ${items} \nTotal: ₹${total} \nAdvance(60%): ₹${(total*0.6).toFixed(2)} \nContact: ${mobile}`;
            window.open(`https://wa.me/918740871855?text=${encodeURIComponent(text)}`); // Apna number sahi daal dena
        }
    </script>
</body>
</html>
